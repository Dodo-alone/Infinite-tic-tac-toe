<UserControl x:Class="Infinite_tic_tac_toe.UserInterface.UserControls.Configuration.AIPlayerConfigurationUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Infinite_tic_tac_toe.UserInterface.UserControls.Configuration"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

      <!-- AI Configuration Card -->
      <Border Background="White" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="8" 
            Padding="16" 
            Margin="0,8,0,0">
            <Border.Effect>
                  <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" ShadowDepth="1" Direction="270"/>
            </Border.Effect>

            <StackPanel>
                  <!-- Header with Icon -->
                  <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="Auto"/>
                              <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- AI Icon -->
                        <Border Grid.Column="0" 
                        Background="{StaticResource AccentBrush}" 
                        Width="24" Height="24" 
                        CornerRadius="12" 
                        Margin="0,0,8,0">
                              <TextBlock Text="🤖" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center" 
                              FontSize="12"/>
                        </Border>

                        <TextBlock Grid.Column="1" 
                          Text="AI Player Settings" 
                          Style="{StaticResource SectionHeaderText}" 
                          VerticalAlignment="Center"/>
                  </Grid>

                  <!-- Move Delay Setting -->
                  <Grid Margin="0,0,0,8">
                        <Grid.RowDefinitions>
                              <RowDefinition Height="Auto"/>
                              <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="*"/>
                              <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Label -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                          Text="Move Delay" 
                          Style="{StaticResource LabelText}" 
                          Margin="0,0,0,8"/>

                        <!-- Value Display -->
                        <Border Grid.Row="0" Grid.Column="1" 
                        Background="{StaticResource SurfaceBrush}" 
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4" 
                        Padding="8,4"
                        MinWidth="60">
                              <TextBlock Text="{Binding MoveDelayMs, StringFormat='{}{0}ms'}" 
                              Style="{StaticResource ValueText}"
                              HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Slider -->
                        <Slider Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                       Minimum="0" Maximum="5000" 
                       Value="{Binding MoveDelayMs}"
                       TickFrequency="500"
                       IsSnapToTickEnabled="True"
                       Style="{StaticResource ModernSlider}"
                       Margin="0,8,0,0"/>
                  </Grid>

                  <!-- Validation Errors -->
                  <ItemsControl ItemsSource="{Binding ValidationErrors}" Margin="0,8,0,0">
                        <ItemsControl.ItemTemplate>
                              <DataTemplate>
                                    <Grid Margin="0,2">
                                          <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                          </Grid.ColumnDefinitions>

                                          <!-- Error Icon -->
                                          <Border Grid.Column="0" 
                                          Background="{StaticResource ErrorBrush}" 
                                          Width="16" Height="16" 
                                          CornerRadius="8" 
                                          Margin="0,0,6,0"
                                          VerticalAlignment="Top">
                                                <TextBlock Text="!" 
                                          Foreground="White" 
                                          FontSize="10" 
                                          FontWeight="Bold"
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                                          </Border>

                                          <!-- Error Message -->
                                          <TextBlock Grid.Column="1" 
                                          Text="{Binding}" 
                                          Style="{StaticResource ErrorText}"
                                          TextWrapping="Wrap"/>
                                    </Grid>
                              </DataTemplate>
                        </ItemsControl.ItemTemplate>
                  </ItemsControl>
            </StackPanel>
      </Border>
</UserControl>